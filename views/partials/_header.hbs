{{! scripts }}
<script>
  const links = document.querySelectorAll('a'); links.forEach(link => {
    link.addEventListener('mouseover', () => {
      link.classList.replace('border-transparent', 'link-underlined');
    });
    link.addEventListener('mouseout', () => {
      link.classList.replace('link-underlined', 'border-transparent');
    });
  });
</script>